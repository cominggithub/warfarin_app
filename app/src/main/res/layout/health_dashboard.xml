<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/healthDashboard_mainLayout"
    android:background="#ffc3ffc6">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/health_table">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/healthDashboard_ivIndicatorLow"
                android:src="@mipmap/downward_arrow_red"
                android:layout_above="@+id/healthDashboard_ivLow"
                android:layout_alignRight="@+id/textView15"
                android:layout_alignEnd="@+id/textView15"
                android:layout_weight="0.2" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/healthDashboard_ivIndicatorNormal"
                android:src="@mipmap/downward_arrow_red"
                android:layout_above="@+id/healthDashboard_ivNormal"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.6" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/healthDashboard_ivIndicatorHigh"
                android:src="@mipmap/downward_arrow_red"
                android:layout_above="@+id/healthDashboard_ivHigh"
                android:layout_alignLeft="@+id/textView17"
                android:layout_alignStart="@+id/textView17"
                android:layout_weight="0.2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/healthDashboard_ivLow"
                    android:background="#ffbb4345"
                    android:layout_weight="0.2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="偏低"
                    android:id="@+id/textView15"
                    android:textSize="30dp"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/healthDashboard_ivNormal"
                    android:background="#ff5abb29"
                    android:layout_weight="0.6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="適當"
                    android:id="@+id/textView16"
                    android:textSize="30dp"
                    android:layout_weight="0.6"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/healthDashboard_ivHigh"
                    android:background="#fff71028"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="0.2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="偏高"
                    android:id="@+id/textView17"
                    android:textSize="30dp"
                    android:layout_alignStart="@+id/textView24"
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="INR:2"
                android:id="@+id/textView18"
                android:textSize="20dp"
                android:layout_above="@+id/textView24"
                android:layout_toLeftOf="@+id/healthDashboard_ivNormal"
                android:layout_toStartOf="@+id/healthDashboard_ivNormal"
                android:textAlignment="center"
                android:layout_weight="0.2"
                android:gravity="right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textAlignment="center"
                android:layout_weight="0.6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="INR:4"
                android:id="@+id/textView19"
                android:textSize="20dp"
                android:layout_above="@+id/textView24"
                android:layout_alignLeft="@+id/healthDashboard_ivHigh"
                android:layout_alignStart="@+id/healthDashboard_ivHigh"
                android:layout_weight="0.2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="用藥不足 \n 無法有效阻止 \n 血栓形成 "
                android:id="@+id/textView21"
                android:layout_below="@+id/healthDashboard_ivLow"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.2"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView5"
                android:layout_weight="0.6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="用藥過高 \n 無法有效阻止 \n 血栓形成 "
                android:id="@+id/textView24"
                android:layout_above="@+id/textView22"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.2"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/background_dark" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="抗凝血作用程度"
        android:id="@+id/textView20"
        android:textSize="40dp"
        android:textColor="@android:color/background_dark"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/health_tvInr"
        android:layout_marginBottom="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INR: 50"
        android:id="@+id/health_tvInr"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/health_table"
        android:layout_marginBottom="50dp"
        android:textColor="@android:color/background_dark" />

</RelativeLayout>